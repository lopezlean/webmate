{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "esNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    //"rootDir": ".",
    "baseUrl": ".",
    "outDir": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "paths": {
      "@webmate/core": ["./packages/core/src"],
      "@webmate/ui": ["./packages/ui/src"],
      "@webmate/editor": ["./packages/editor/src"],
      "@webmate/controls": ["./packages/controls/src"],
      "@webmate/components": ["./packages/components/src"],
      "@webmate/service-worker": ["./packages/service-worker/src"],
      "@webmate/worker": ["./packages/worker/src"],
      "@webmate/core/*": ["./packages/core/src/*"],
      "@webmate/ui/*": ["./packages/ui/src/*"],
      "@webmate/editor/*": ["./packages/editor/src/*"],
      "@webmate/controls/*": ["./packages/controls/src/*"],
      "@webmate/components/*": ["./packages/components/src/*"],
      "@webmate/service-worker/*": ["./packages/service-worker/src/*"],
      "@webmate/worker/*": ["./packages/worker/src/*"]
    },
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": false
      }
    ]
  },
  "references": [
    {
      "path": "packages/core"
    },
    {
      "path": "packages/worker"
    },
    {
      "path": "packages/editor"
    },
    {
      "path": "packages/preview-indicators"
    },
    {
      "path": "packages/controls"
    },
    {
      "path": "packages/components"
    },
    {
      "path": "packages/ui"
    },

    {
      "path": "packages/service-worker"
    }
  ]
}
